<div id="printdiv" class="printable">
<table class="table">

  <center> <label><b>J.J.R Auto Mobiles Store</b> </label></center>
   <center> <label><b>Bills Details</b> </label></center>
	<tr><td><b>Customer Name :</b><%= @customer.name%></td></tr>
    <tr><td><b>Email ID : </b><%= @customer.email%></td></tr>
    <tr><td><b>Phone No :</b><%= @customer.phone %></td></tr>
	<tr>
	    <td><b>Sl No.</b></td>
		<td><b>Product Type</b></td>
        <td><b>Brand</b></td>
        <td><b>Brand Type</b></td>
        <td><b>Spare Item</b></td>
	</tr>
	 <% count = 1 -%>
	<% @bill_details.each do |bill_detial|%>
	<tr>
	     <td><%= count%></td>
	     <td><%= bill_detial.spare_item.brand_type.brand.product_type.p_type%></td>
	     <td><%= bill_detial.spare_item.brand_type.brand.name%></td>
	     <td><%= bill_detial.spare_item.brand_type.brand_name%></td>
	     <td><%= bill_detial.spare_item.item_name%></td>
	     <% count += 1 -%>
    </tr>  
	<%end%>
	 <tr><td><b>Total Amount : </b> Rs <%= @bills.total_amount %></td></tr>	
</table>
<center><button onclick="myFunction()">Print</button></center>
<script>
function myFunction()
{
    var print = $("#printdiv").html();
    var winPrint = window.open('', '', 'left=0,top=0,width=800,height=600,toolbar=0,scrollbars=0,status=0');
    winPrint.document.write(print);
    winPrint.document.close();
    winPrint.focus();
    winPrint.print();
    winPrint.close();
}
</script>