<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Bootstrap, from Twitter</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="../bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
<script type="text/javascript" src="../js/bootstrap.min.js"></script>
<style type="text/css">
    .bs-example{
      margin: 20px;
    }
</style>
</head>
<body>
<div class="bs-example">
    <form class="form-horizontal">
      <fieldset>
      <table>
      <tr>
      <td>    
        <div class="control-group">
            <label class="control-label" for="inputEmail">Custemer Name</label>
            <div class="controls">
                <input type="text" id="custemer_name" placeholder="Custemer Name">
            </div>
        </div>
    </td>
    <td>  
        <div class="control-group">
            <label class="control-label" for="inputPassword">Date</label>
      <input name="date" class="form-control datepicker" data-date-format="dd/mm/yyyy" id="checkout" placeholder="click here">
            </div>
    </td>
    </tr>
    <tr>
      <td>
      <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
                <input type="text" id="email" placeholder="Email"><i class="icon-envelope"></i>
            </div>
        </div>
    </td>
    <td>
      <div class="control-group">
            <label class="control-label" for="inputEmail">Phone</label>
            <div class="controls">
                <input type="text" id="email" placeholder="Phone">
            </div>
        </div>
    </td>
    </tr>
    <tr>
      <td>
        <label class="control-label" for="brandtype">Product Type</label>
        <div class="controls">
          <%= select_tag "product_typ_id", options_from_collection_for_select(ProductType.all, "id", "p_type"), :prompt => "Select Any One", :onchange => "update_brands_div(this.value)" %>
        </div>
      </td>
      <td>
        <label class="control-label" for="brand">Brand</label>
        <div class="controls" id="brands_div">
          <%= select("brand","name",[], :prompt => "Select a Product Type")%>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <label class="control-label" for="brandtype">Brand Type</label>
        <div class="controls" id="brand_types_div">
          <%= select("band","type",[], :prompt => "Select a Brand")%>
        </div>
      </td>
      <td>
        <label class="control-label" for="productspare">Product Spare</label>
        <div class="controls" id="spare_items_div">
          <%= select("product","spare",[], :prompt => "Select a Brand Type")%>
        </div>
      </td>
    </tr>
    </table>
   </fieldset>
   <br>
   <br>
   <div class="controls" align="center">
    <button type="button" class="btn btn-success" id="add_button">Add</button>
    </div>
    <br>
    <br>
    <br>
    <table class="table">
      <tr>
      <th>sl</th>
      <th>Item</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Total</th>
      </tr>
    </table>
    <div id="abc">
      </div>
    </form>
</div></body>
</html>

<script>
var count = 0;
$("#add_button").click(function(){
  var item = $("#product_spare").val();
  count = count+1;
  alert(item)
  data = "item=" + item + "&count" + count;
$.ajax({
   url: "/user/add_bill",
   type: "get",
   dataType: "html",
   data: data,
   success: function(returnData){
     $("#abc").append(returnData);
   },
   error: function(e){
     alert(e);
   }
});  
}); 
</script>